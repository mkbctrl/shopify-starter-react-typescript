{
  "compilerOptions": {
    "rootDir": "src/scripts",
    "outDir": "assets",
    "target": "es5",
    "module": "esnext",
    "noEmitOnError": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "assets",
    "src/styles/**/*"
  ]
}